	number = {2},
	urldate = {2023-01-29},
	journal = {Atmospheric Chemistry and Physics},
	author = {Lawrence, Christopher E. and Casson, Paul and Brandt, Richard and Schwab, James J. and Dukett, James E. and Snyder, Phil and Yerger, Elizabeth and Kelting, Daniel and VandenBoer, Trevor C. and Lance, Sara},
